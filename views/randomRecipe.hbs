
<link rel="stylesheet" href="/stylesheets/recipe.css" type="text/css">

<body>
{{> navbar}}


<input type="hidden" id="userRate" value="{{userRate}}" />

<div class="center">
    <div class="container" id="dish">
        <div class="container">
            <h2 style="margin-bottom: 0;">{{recipe.name}}</h2>
            <h6> Średnia ocena: {{rating}}</h6>
            <div class="recipeDescription">
                <h5>Składniki: </h5>
                {{#each ingredient}}
                    <li>{{this.ing_name}}</li>
                {{/each}}
            </div>
        </div>

        <div class="container">
            <img src="/{{recipe.picture_path}}"
                 class="img-thumbnail">
            <div id="container">
                <h5 style="margin-bottom: 0;"> Oceń przepis!</h5>
                <div style="display: flex">
                    <div class="rating"></div>
                            <input id="star-value" type="hidden">
                            {{#if userRate}}
                                <span style="margin: 10px 10px"> {{userRate}} / 5 </span>
                            {{/if}}
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="container">
        <h5>Wykonanie</h5>
        <div id="recipeDescription">
            {{recipe.description}}
        </div>
    </div>
    <div style="margin-top: 4rem;" class="container left" id="comments" >
        <h5>Komentarze</h5>
        <input id="userId" type="hidden" value={{session.userId}}>
        <input id="recipeId" type="hidden" value={{recipe.id_recipe}}>
        <input type="description" id="description" name="description" placeholder="Napisz co myślisz o tym przepisie...">
        <button class="button" id="add-description-btn" type="submit">Dodaj komentarz</button>
        <div class="container">
            {{#each comment}}
                <div class="col"> {{this.login}} </div>
                <div class="col"> {{this.description}} </div>
            {{/each}}

        </div>
    </div>
</div>

<script src="/javascripts/rater.min.js"></script>
<script src="/javascripts/addComment.js"></script>
<script src="/javascripts/starRating.js"></script>
</body>

