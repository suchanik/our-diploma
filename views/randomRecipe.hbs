<link rel="stylesheet" href="/stylesheets/recipe.css" type="text/css">

<body>
{{> navbar}}

<div class="center">
    <div class="container" id="dish">
        <div class="left">
            <h2 class="background__color">{{recipe.name}}</h2>
            <div class="recipeDescription">
                <h5>Składniki: </h5>
                {{#each ingredient}}
                    <li>{{this.ing_name}}</li>
                {{/each}}
            </div>
        </div>

        <div class="right">
            <img src="https://bi.im-g.pl/im/ba/85/19/z26760122ICR,Makaron-z-czosnkiem-i-natka.jpg"
                 class="img-thumbnail">
            <div id="rateRecipe">
                <h5 style="margin-bottom: 0;"> Oceń przepis!</h5>
                <div id="star-avg">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    {{#each rating}}
                        <h5> {{this.avg_rating}}</h5>
                    {{/each}}
                </div>

            </div>
        </div>

    </div>

    <div class="container">
        <h5>Wykonanie</h5>
        <div id="recipeDescription">
            {{recipe.description}}
        </div>
    </div>
    <div style="margin-top: 4rem;" class="container left" >
        <h5>Komentarze</h5>
        <input id="userId" type="hidden" value={{session.userId}}>
        <input id="recipeId" type="hidden" value={{recipe.id_recipe}}>
        <input type="description" id="description" name="description">
        <button class="button" id="add-description-btn" type="submit">Dodaj komentarz</button>
        {{#each comment}}
            <div> {{this.login}} : {{this.description}}</div>
        {{/each}}
    </div>
</div>
<script src="/javascripts/addComment.js"></script>
</body>

