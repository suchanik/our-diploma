<html lang="pl">

<body>
{{> navbar}}

<div class="center">
    <section id="ingredient">
        <div class="container">
            <h2>Wyszukaj przepisy po składnikach</h2>
            <div class="multi_select_box">
                <!--                main.js  linijka: 54-->
                <select class="ingredients-select w-100" id="ingredients-select" data-live-search="true"
                        data-selected-text-format="count > 3" multiple>
                    {{#each ingredients}}
                        <option value="{{this.id_ingredient}}">{{this.ing_name}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" id="show-recipes-btn" style="margin-top: 20px;">Szukaj przepisów</button>
        </div>

    </section>

    <div class="alert alert-danger" id="recipes-error-alert" hidden>

    </div>

    <ul id="rendered_recipes-list">

    </ul>

</div>


<script src="/javascripts/main.js"></script>
