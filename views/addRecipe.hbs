<link rel="stylesheet" href="/stylesheets/recipe.css" type="text/css">

<body>
{{> navbar}}
<input id="userId" type="hidden" value={{session.userId}}>
<input id="recipeId" type="hidden" value={{recipe.id_recipe}}>

<div class="container">
    <div style="margin-bottom: 2rem" class="container">
                <input type="recipeName" id="recipeName" name="recipeName" placeholder="Dodaj tytuł">
    </div>

    <div class="row justify-content-around">
        <div class="col-4">
            <h5>Dodaj składniki: </h5>
            <div style="margin-top: 0" class="multi_select_box">
                <select class="ingredients-select w-100" id="ingredients-select" data-live-search="true"
                        title="Nie wybrano żadnych składników"
                        data-selected-text-format="count > 3" data-count-selected-text="Wybrano {0}"
                        noneResultsText='Nie ma takiego składnika, spróbuj wpisać inaczej' multiple>
                    {{#each ingredients}}
                        <option value="{{this.id_ingredient}}">{{this.ing_name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="col-4">
            <h6 style="margin-top: 1rem">Dodaj zdjęcie</h6>
        </div>
    </div>


    <div style="margin-top: 4rem;" class="container" id="comments">
        <h5>Opis wykonania</h5>
        <input type="description" id="description" name="description">
    </div>
    <div style="margin-top: 1rem" class="row justify-content-center">
        <button class="button" id="add-recipe-btn" type="submit">Zapisz</button>
    </div>

</div>
